{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "properties": {
        "news": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string",
                    "title": "Peut être un nombre ou une chaîne de caractère. Peut être laissé vide"
                },
                "titre": {
                    "type": "string",
                    "title": "Titre de la news"
                },
                "description": {
                    "type": "string",
                    "title": "Le contenu de la nouvelle"
                },
                "droits": {
                    "type": "array",
                    "title": "Liste des choix sur les droits, O ou 1"
                },
                "auteur": {
                    "type": "object",
                    "properties": {
                        "_id": {
                            "type": "string",
                            "title": "Peut être un nombre ou une chaîne de caractère. Peut être laissé vide"
                        },
                        "nom": {
                            "type": "string",
                            "title": "Nom de l'auteur"
                        },
                        "infos": {
                            "type": "string",
                            "title": "Des infos sur l'auteur, le cas échéant"
                        }
                    }
                }
            },
            "title": "Nouvelle"
        },
        "title": "Mon site d'actualités"
    }
}